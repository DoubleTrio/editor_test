<v:ChromelessWindow xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="using:AvaloniaTest.ViewModels"
                    xmlns:v="using:AvaloniaTest.Views"
                    xmlns:c="using:AvaloniaTest.Converters"
                    xmlns:views="clr-namespace:AvaloniaTest.Views"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="450"
                    x:Class="AvaloniaTest.Views.MainWindow"
                    x:DataType="vm:MainWindowViewModel"
                    x:Name="WindowMain"
                    Icon="/Assets/avalonia-logo.ico"
                    Title="Avalonia PMD Editor">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Window.Resources>
        <c:WindowStateToColumnConverter x:Key="WindowStateToColumnConverter" />

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding #WindowMain.CaptionHeight}" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, Auto, *, Auto">
            <Border Grid.Column="0" Grid.ColumnSpan="4"
                    DoubleTapped="MaximizeOrRestoreWindow"
                    PointerPressed="BeginMoveWindow"
                    Background="{DynamicResource Brush.TitleBar}"
                    BorderThickness="0,0,0,1" BorderBrush="{DynamicResource Brush.Border0}" />
            <Border Grid.Column="0" Width="72" IsVisible="{Binding #WindowMain.HasLeftCaptionButton}" />

            <StackPanel
                Grid.Column="{Binding #WindowMain.WindowState, Converter={StaticResource WindowStateToColumnConverter}}"
                Orientation="Horizontal">
                <!-- Settings -->
                <Button Classes="icon_button" Command="{Binding OpenPreferencesWindow}"
                        Padding="8, 4, 0, 0">
                    <Path HorizontalAlignment="Center" Width="14" Height="14" Margin="0,2,0,0"
                          Data="{StaticResource Icons.GearFill}" />
                </Button>

                <!-- Switch Mod Button  -->
                <Button ToolTip.Tip="{Binding CurrentMod.Key}" Margin="12, 0, 0, 0" Grid.Column="3"
                        Classes="icon_button"
                        x:Name="ModSwitcherFlyoutButton" Command="{Binding OpenModSwitcher}" Padding="0, 4, 0, 0">

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Padding="0, 0, 6, 0" Text="{Binding CurrentMod.Name}" />
                        <Path HorizontalAlignment="Center" Width="10" Height="10" Margin="0,2,0,0"
                              Data="{StaticResource Icons.CaretDownFill}" />
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout Placement="BottomEdgeAlignedLeft"
                                VerticalOffset="8"
                                Opened="ModSwitcherFlyout_OnOpened"
                                Closed="ModSwitcherFlyout_OnClosed">
                            <StackPanel Orientation="Vertical" Background="{DynamicResource Brush.Popup}">
                                <ContentControl Content="{Binding ModSwitcher}" Margin="8,8,8,8" />
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>

            <Border Grid.Column="3" Margin="16,0,0,0" IsVisible="{Binding #WindowMain.HasRightCaptionButton}">
                <v:CaptionButtons Height="30" VerticalAlignment="Top" />
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200" MaxWidth="500" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Left Side -->
            <Border Grid.Column="0" Margin="0,0,0,0" BorderThickness="1"
                    BorderBrush="{DynamicResource Brush.ToolBar}" CornerRadius="6">
                <Grid RowDefinitions="28, 3, *">
                    <TextBox
                        Margin="0,0,0,0"
                        Height="28"

                        BorderThickness="0"
                        CornerRadius="0"
                        BorderBrush="{DynamicResource Brush.Border2}"
                        Watermark="Search..."
                        Text="{Binding Filter, Mode=TwoWay}"
                        VerticalContentAlignment="Center">
                        <TextBox.InnerLeftContent>
                            <Path
                                Fill="{DynamicResource Brush.FG2}"
                                Width="12" Height="12"
                                Margin="6,0,0,0"
                                Data="{StaticResource Icons.MagnifyingGlassFill}" />


                        </TextBox.InnerLeftContent>
                        <TextBox.InnerRightContent>
                            <Button Classes="icon_button"
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,6,0"
                                    Command="{Binding ClearFilterCommand}"
                                    IsVisible="{Binding Filter, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                    HorizontalAlignment="Right">
                                <Path
                                    Width="14" Height="14"
                                    Margin="0,1,0,0"
                                    Data="{StaticResource Icons.XCircleFill}" />
                            </Button>
                        </TextBox.InnerRightContent>
                    </TextBox>
                    <Border Grid.Row="1"
                            Height="1"
                            Background="{DynamicResource Brush.Border2}"
                            HorizontalAlignment="Stretch" />

                    <TreeView Grid.Row="2" Margin="0"
                              x:Name="MasterTreeView"
                              SelectionMode="Toggle"
                              ItemsSource="{Binding Nodes}"
                              SelectedItems="{Binding TreeSearch.SelectedNodes}"
                              DoubleTapped="MasterTreeView_OnDoubleTapped"
                              ContextRequested="MasterTreeView_OnContextRequested"
                              SelectionChanged="MasterTreeView_OnSelectionChanged"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <TreeView.Styles>
                            <Style Selector="TreeViewItem" x:DataType="vm:NodeBase">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                <Setter Property="IsVisible" Value="{Binding IsVisible}" />
                            </Style>
                        </TreeView.Styles>
                        <TreeView.DataTemplates>
                            <!-- Note the DataRoot and SpriteRoot follow the ItemRootTemplate -->
                            <StaticResource ResourceKey="ItemRootTemplate" />
                            <StaticResource ResourceKey="DataItemTemplate" />
                            <StaticResource ResourceKey="OpenEditorTemplate" />
                            <StaticResource ResourceKey="NodeBaseTemplate" />
                        </TreeView.DataTemplates>
                    </TreeView>
                </Grid>
            </Border>

            <!--  Splitter -->
            <GridSplitter Grid.Column="1"
                          BorderBrush="{DynamicResource Brush.Border0}"
                          Background="Transparent"
                          MinWidth="3"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          BorderThickness="0,0,1,0" />

            <!-- Editor Panel -->
            <Grid Margin="2, 0, 0, 0" Grid.Column="2" RowDefinitions="Auto, *">
                <Border BorderThickness="0, 0, 0, 1" BorderBrush="{DynamicResource Brush.Border0}"
                        Background="{DynamicResource TabControlWindowActiveBackgroundBrush}">
                    <!-- Tab Bar -->
                    <views:TabBarView Height="30" VerticalAlignment="Bottom" Margin="0,0,0,0" />

                </Border>

                <!-- Editor Content -->
                <Panel Grid.Row="1" Background="{DynamicResource Brush.PageBackground}">
                    <ContentControl Content="{Binding TemporaryTab}"
                                    IsVisible="{Binding TemporaryTab, Converter={x:Static ObjectConverters.IsNotNull}}" />
                    <ContentControl Content="{Binding ActivePage}"
                                    IsVisible="{Binding TemporaryTab, Converter={x:Static ObjectConverters.IsNull}}" />
                </Panel>
            </Grid>
        </Grid>

    </Grid>

</v:ChromelessWindow>